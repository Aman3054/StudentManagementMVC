@model StudentManagementMVC.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<table class="details-table">
    <tr>
        <th>Student Id</th>
        <td>@Model.StudentId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Age</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@(Model.IsActive ? "Yes" : "No")</td>
    </tr>
</table>

<p class="details-actions">
    <a asp-action="Index">Back to List</a>
</p>
